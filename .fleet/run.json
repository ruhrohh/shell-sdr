{
    "configurations": [
        {
            "type": "command",
            "name": "Build Shell",
            "program": "gcc",
            "args": [
                "$PROJECT_DIR$/src/shell.c",
                "$PROJECT_DIR$/src/core.c",
                "$PROJECT_DIR$/src/utils.c",
                "$PROJECT_DIR$/src/commands.c",
                "-o",
                "$PROJECT_DIR$/myshell",
                "-lreadline",
                "-I",
                "$PROJECT_DIR$/include"
            ]
        },
        {
            "type": "command",
            "name": "Run Shell",
            "dependsOn": ["Build Shell"],
            "program": "$PROJECT_DIR$/myshell"
        }
    ]
}